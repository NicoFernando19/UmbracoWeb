@inherits UmbracoViewPage<Umbraco.Models.LoginFormModel>

@using (Html.BeginUmbracoForm("LoginPost", "Auth", FormMethod.Post, new { @id = "form"  }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.LoginFormId)
    @Html.ValidationSummary()

    <div class="form-group mb-lg">
        <label>Username</label>
        <div class="input-group input-group-icon">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-lg", placeholder = "Username" })
            <span class="input-group-addon">
                <span class="icon icon-lg">
                    <i class="fa fa-user"></i>
                </span>
            </span>
        </div>
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="form-group mb-lg">
        <div class="clearfix">
            <label class="pull-left">Password</label>
            <a href="/forgot-password" class="pull-right">Lost Password?</a>
        </div>
        <div class="input-group input-group-icon">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-lg", placeholder = "Password", type = "password" })
            @Html.ValidationMessageFor(m => m.Password)
            <span class="input-group-addon">
                <span class="icon icon-lg">
                    <i class="fa fa-lock"></i>
                </span>
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="checkbox-custom checkbox-default">
                <input id="RememberMe" name="rememberme" type="checkbox" />
                <label for="RememberMe">Remember Me</label>
            </div>
        </div>
        <div class="col-sm-4 text-right">
            <button type="submit" class="btn btn-primary hidden-xs" onclick="onSubmit">Sign In</button>
            <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg" onclick="onSubmit">Sign In</button>
        </div>
    </div>

    <p class="text-center">Don't have an account yet? <a href="/register/">Sign Up!</a> </p>
}